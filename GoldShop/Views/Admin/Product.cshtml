                                foreach (Category i in ViewBag.categories)
                                {
                                    if (Index == 0)
                                    {
                                        <option selected="selected" value="@i.Id">@i.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@i.Id">@i.Name</option>
